<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomChat"
    android:background="#8AC6D1">

    <ImageView
        android:id="@+id/ellips"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ellipse_white"/>

    <RelativeLayout
        android:id="@+id/top_daftar_konsultan"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/genting_daftar_konsultan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/logo_type" />

        <ImageView
            android:id="@+id/menu_daftar_konsultan"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/strip_menu" />

    </RelativeLayout>

    <TextView
        android:id="@+id/nama_konsultan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="115dp"
        android:text="dr. Evlyn Rogger"
        android:textSize="17sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/nama_profesi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="140dp"
        android:text="Nutrition Specialist" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ellips"

        android:paddingBottom="20dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile_picture_konsultan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_chat"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"/>

        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_chat"
            android:layout_marginTop="55dp"
            android:layout_marginStart="60dp"/>



    </FrameLayout>

    <EditText
        android:id="@+id/ketik_pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bottom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp"
        android:paddingStart="15dp"
        android:textAllCaps="false"
        android:hint="Ketik disini ...."/>

</androidx.constraintlayout.widget.ConstraintLayout>